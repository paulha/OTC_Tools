#
#   This file should be located in ~/.jira/config.yaml
#

#
# --  For backward compatibility:
#
connection:
    server: 'https://jira-t3.devtools.intel.com'
    # set verify to either the root cert or False to ignore warnings
    verify: 'IntelSHA256RootCA-Base64.crt'

user:
    username: 'user'
    password: 'password'

#
# -- Change to enable server dependent stuff to be saved in the authentication file:
#
servers:
    jira-t3:
        host:     'https://jira-t3.devtools.intel.com'
        verify:   'IntelSHA256RootCA-Base64.crt'
        username: 'user'
        password: 'password'

    jira01:
        host:     'https://jira01.devtools.intel.com'
        verify:   'IntelSHA256RootCA-Base64.crt'
        username: 'user'
        password: 'password'

    jira-stg:
        host:     'http://jira-stg.ostc.intel.com:8080'
        verify:   'IntelSHA256RootCA-Base64.crt'
        username: 'user'
        password: 'password'

